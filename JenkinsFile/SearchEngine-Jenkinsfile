pipeline {
    agent any
    stages {
        stage('Trigger crawler_indexer') {
            steps {
                build job: 'crawler-indexer-pipeline', wait: true, propagate: true
            }
        }

        stage('Trigger search_api') {
            steps {
                build job: 'search-api-pipeline', wait: true, propagate: true
            }
        }

        stage('Trigger frontend') {
            steps {
                build job: 'frontend-pipeline', wait: true, propagate: true
            }
        }
    }
}
